@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2 class="text-xl-center ">KİTAP SAYFASI</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Aranacak Kitap Adını Girin:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />

    </div>
}

<br />


<table class="table table-bordered" style="text-align:center" >
    <tr style="background-color:rgb(252, 178, 22)">
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KİTAP YAZARI</th>
        <th>KATEGORİ</th>
        <th>BASIM YILI</th>
        <th>YAYINEVİ</th>
        <th>SAYFA</th>
        <th>DURUM</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD &nbsp @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYIL</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td class="text-center"><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">SİL</a></td>
            <td class="text-center"><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
    }


</table>

<a href="/Kitap/KitapEkle" class="btn btn-primary">KİTAP EKLE</a>