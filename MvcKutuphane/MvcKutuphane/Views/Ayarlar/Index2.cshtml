@using MvcKutuphane.Models.Entity
@model List<TBLADMIN>
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}






<link rel="stylesheet" href="/AdminLTE3.04/plugins/fontawesome-free/css/all.min.css">
<!-- Ionicons -->
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
<!-- overlayScrollbars -->
<link rel="stylesheet" href="/AdminLTE3.04/dist/css/adminlte.min.css">
<!-- Google Font: Source Sans Pro -->
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">



<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>





<br />

<h2 style="text-align:center">AYARLAR</h2>

<table class="table table-bordered" style="text-align:center">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>YETKİ</th>
        <th>DURUM</th>
        <th>SİL</th>
        <th>DÜZENLE</th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ID</td>
            <td>@item.Kullanici</td>
            <td>@item.Yetki</td>
            <td> <span class="badge badge-success">Success</span></td>

            <td>
                <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@item.ID">
                    <i class="fas fa-trash" style="width:30px">
                    </i>
                    SİL
                </a>
            </td>

            <td>

                <a class="btn btn-info btn-sm" href="/Ayarlar/AdminGuncelle/@item.ID">
                    <i class="fas fa-pencil-alt" style="width:20px">
                    </i>
                    DÜZENLE
                </a>
            </td>
        </tr>
    }

</table>
<br />

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">YENİ ADMIN EKLE</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">ADMIN EKLEME PANELİ</h2>
            </div>
            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <label>KULLANICI ADI</label>
                    <input type="text" name="Kullanici" class="form-control" />
                    <br />
                    <label>ŞİFRE</label>
                    <input type="password" name="Sifre" class="form-control" />
                    <br />
                    <label>YETKİ</label>
                    <input type="text" name="Yetki" class="form-control" />
                    <br />
                    <button class="btn btn-info">KAYDET</button>
                </div>

            </form>
        </div>

    </div>
</div>