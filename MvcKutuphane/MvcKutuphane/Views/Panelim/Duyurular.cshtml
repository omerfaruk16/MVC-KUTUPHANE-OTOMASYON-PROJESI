@using MvcKutuphane.Models.Entity;
@model List<TBLDUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}
<br />
<h2 style="text-align:center">Duyurular</h2>
<br />

<table class="table table-bordered" style="text-align:center">
    <tr style="background-color:rgb(252, 178, 22)">
    
        <th class="text-center">KATEGORİ</th>
        <th class="text-center">TARİH</th>
        <th class="text-center">İÇERİK</th>


       
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.KATEGORI</td>
            <td>@Convert.ToDateTime(prs.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@prs.ICERIK</td>

        </tr>
    }

</table>


