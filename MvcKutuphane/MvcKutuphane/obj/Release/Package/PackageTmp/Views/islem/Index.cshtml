@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<br />
<h2 class="text-xl-center ">İADESİ ALINAN KİTAP LİSTESİ</h2>

<br />


<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th style="text-align:center">İŞLEM ID</th>
        <th style="text-align:center">KİTAP ADI</th>
        <th style="text-align:center">ÜYE</th>
        <th style="text-align:center">PERSONEL</th>
        <th style="text-align:center">ALIŞ TARİHİ</th>
        <th style="text-align:center">İADE TARİHİ</th>
        <th class="text-center">İADE İŞLEMİ</th>


    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td style="text-align:center">@k.ID</td>
            <td style="text-align:center">@k.TBLKITAP.AD</td>
            <td style="text-align:center">@k.TBLUYELER.AD &nbsp @k.TBLUYELER.SOYAD</td>
            <td style="text-align:center">@k.TBLPERSONEL.PERSONEL</td>
            <td style="text-align:center">@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td style="text-align:center">@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>

            <td class="text-center"><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#0094ff; color:white">DETAYLAR</a></td>


        </tr>
    }


</table>

