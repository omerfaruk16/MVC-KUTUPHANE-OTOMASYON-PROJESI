@using MvcKutuphane.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<h2 class="text-xl-center">PERSONELLER</h2>


<table class="table table-bordered" style="text-align:center">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th class="text-center">SİL</th>
        <th class="text-center">GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td class="text-center"><a href="/Personeller/PersonelSil/@prs.ID" class="btn btn-danger">SİL</a></td>
            <td class="text-center"><a href="/Personeller/PersonelGetir/@prs.ID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }

</table>
<a href="/Personeller/PersonelEkle" class="btn btn-primary">PERSONEL EKLE</a>

