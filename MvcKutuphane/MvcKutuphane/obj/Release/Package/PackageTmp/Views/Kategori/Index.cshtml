@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2 class="text-xl-center" >KATEGORİ İŞLEMLERİ</h2>

<table class="table table-bordered" style="text-align:center">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th class="text-center">SİL</th>
        <th class="text-center">GÜNCELLE</th>
    </tr>
    @foreach(var ktg in Model)
            {
                <tr>
                    <td>@ktg.ID</td>
                    <td>@ktg.AD</td>
                    <td class="text-center"><a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger">SİL</a></td>
                    <td class="text-center"><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-success">GÜNCELLE</a></td>
                </tr>
            }
 
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">KATEGORİ EKLE</a>