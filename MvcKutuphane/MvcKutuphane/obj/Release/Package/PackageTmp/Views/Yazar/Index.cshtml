@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2 class="text-xl-center ">YAZARLAR</h2>
<br />

<table class="table table-striped">
    <tr style="background-color:rgb(252, 178, 22)">
        <th style="text-align:center">ID</th>
        <th style="text-align:center">AD</th>
        <th style="text-align:center">SOYAD</th>
        <th style="text-align:center">DETAY</th>
        <th style="text-align:center">SİL</th>
        <th style="text-align:center">GÜNCELLE</th>
        <th style="text-align:center">YAZARIN KİTAPLARI</th>

    </tr>


    @foreach (var y in Model)
    {
        <tr>
            <td style="text-align:center">@y.ID</td>
            <td style="text-align:center">@y.AD</td>
            <td style="text-align:center">@y.SOYAD</td>
            <td style="text-align:center">@y.DETAY</td>
            <td style="text-align:center">@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
            <td class="text-center"><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-default" style="background-color:azure">GÜNCELLE</a></td>
            <td  class="text-center"><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-success" style="background-color:deepskyblue; color:white">YAZARIN KİTAPLARI</a></td>
        </tr>
    }

</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle">Yeni Yazar Ekle</a>
<br />
<div></div>
<br />